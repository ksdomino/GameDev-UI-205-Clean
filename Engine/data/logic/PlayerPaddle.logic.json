{
  "_context": "Engine/llms.txt",
  "_description": "Player paddle logic - touch/mouse control",
  "actorId": "PlayerPaddle",
  "description": "Player paddle follows touch/mouse X position, clamped to screen bounds.",
  "nodes": [
    {
      "id": "var_speed",
      "type": "variable",
      "subtype": "GetVariable",
      "position": { "x": 50, "y": 50 },
      "outputs": [{ "id": "value", "type": "number", "label": "speed" }],
      "properties": { "variableName": "speed", "defaultValue": 1000 }
    },
    {
      "id": "var_minX",
      "type": "variable",
      "subtype": "GetVariable",
      "position": { "x": 50, "y": 120 },
      "outputs": [{ "id": "value", "type": "number", "label": "minX" }],
      "properties": { "variableName": "minX", "defaultValue": 100 }
    },
    {
      "id": "var_maxX",
      "type": "variable",
      "subtype": "GetVariable",
      "position": { "x": 50, "y": 190 },
      "outputs": [{ "id": "value", "type": "number", "label": "maxX" }],
      "properties": { "variableName": "maxX", "defaultValue": 980 }
    },
    {
      "id": "e_update",
      "type": "event",
      "subtype": "OnUpdate",
      "position": { "x": 280, "y": 50 },
      "outputs": [{ "id": "exec", "type": "execution" }, { "id": "deltaTime", "type": "number" }]
    },
    {
      "id": "a_get_input",
      "type": "action",
      "subtype": "GetTouchPosition",
      "position": { "x": 450, "y": 50 },
      "inputs": [{ "id": "exec", "type": "execution" }],
      "outputs": [{ "id": "exec", "type": "execution" }, { "id": "x", "type": "number" }, { "id": "y", "type": "number" }, { "id": "isActive", "type": "boolean" }]
    },
    {
      "id": "f_check_touch",
      "type": "flow",
      "subtype": "Branch",
      "position": { "x": 620, "y": 50 },
      "inputs": [{ "id": "exec", "type": "execution" }, { "id": "condition", "type": "boolean" }],
      "outputs": [{ "id": "true", "type": "execution" }, { "id": "false", "type": "execution" }]
    },
    {
      "id": "l_lerp_x",
      "type": "logic",
      "subtype": "Lerp",
      "position": { "x": 790, "y": 50 },
      "inputs": [{ "id": "current", "type": "number" }, { "id": "target", "type": "number" }, { "id": "factor", "type": "number" }],
      "outputs": [{ "id": "result", "type": "number" }],
      "properties": { "description": "Smooth movement toward touch X" }
    },
    {
      "id": "l_clamp",
      "type": "logic",
      "subtype": "Clamp",
      "position": { "x": 960, "y": 50 },
      "inputs": [{ "id": "value", "type": "number" }, { "id": "min", "type": "number" }, { "id": "max", "type": "number" }],
      "outputs": [{ "id": "result", "type": "number" }]
    },
    {
      "id": "a_set_pos",
      "type": "action",
      "subtype": "SetPosition",
      "position": { "x": 1130, "y": 50 },
      "inputs": [{ "id": "exec", "type": "execution" }, { "id": "x", "type": "number" }],
      "properties": { "keepY": true }
    }
  ],
  "connections": [
    { "id": "c1", "from": { "nodeId": "e_update", "outputId": "exec" }, "to": { "nodeId": "a_get_input", "inputId": "exec" } },
    { "id": "c2", "from": { "nodeId": "a_get_input", "outputId": "exec" }, "to": { "nodeId": "f_check_touch", "inputId": "exec" } },
    { "id": "c3", "from": { "nodeId": "a_get_input", "outputId": "isActive" }, "to": { "nodeId": "f_check_touch", "inputId": "condition" } },
    { "id": "c4", "from": { "nodeId": "f_check_touch", "outputId": "true" }, "to": { "nodeId": "a_set_pos", "inputId": "exec" } },
    { "id": "c5", "from": { "nodeId": "a_get_input", "outputId": "x" }, "to": { "nodeId": "l_lerp_x", "inputId": "target" } },
    { "id": "c6", "from": { "nodeId": "l_lerp_x", "outputId": "result" }, "to": { "nodeId": "l_clamp", "inputId": "value" } },
    { "id": "c7", "from": { "nodeId": "var_minX", "outputId": "value" }, "to": { "nodeId": "l_clamp", "inputId": "min" } },
    { "id": "c8", "from": { "nodeId": "var_maxX", "outputId": "value" }, "to": { "nodeId": "l_clamp", "inputId": "max" } },
    { "id": "c9", "from": { "nodeId": "l_clamp", "outputId": "result" }, "to": { "nodeId": "a_set_pos", "inputId": "x" } }
  ]
}
